{
    "name": "react-component",
    "description": "生成一个 react 组件，支持函数组件及类组件",
    "props": [
        {
            "name": "name",
            "type": "string",
            "description": "组件名称（非中文）",
            "validate": ["ascii"]
        },
        {
            "name": "type",
            "type": "list",
            "description": "组件类型",
            "prompt": [
                {
                    "value": "class",
                    "name": "Class"
                },
                {
                    "value": "function",
                    "name": "Function"
                }
            ]
        }
    ],
    "generate": {
        "output": {
            "type": "path",
            "description": "组件生成路径（相对于当前路径）",
            "validate": ["path"]
        },
        "rules": [
            {
                "template": {
                    "prop": "type",
                    "value": {
                        "class": "template/class.ts",
                        "function": "template/function.ts"
                    }
                },
                "rename": "__name__/index.ts"
            },
            {
                "template": "template/style.less",
                "rename": "__name__/style.less"
            }
        ]
    },
    "modify": []
}